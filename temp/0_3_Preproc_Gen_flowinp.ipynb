# --- HELPER: STRICT 10-CHAR FORMATTER ---
def fmt_10char(val):
    if val == -1.0: return "       -1."
    if val == 0.0: return "        0."
    # Use 3 decimals -> 9 chars -> 10 chars with pad to prevent touching
    s = f"{val:.3E}" 
    if len(s) > 10: s = s.replace("E+0",
"E").replace("E+",
"E")
    return f"{s:>10}"

